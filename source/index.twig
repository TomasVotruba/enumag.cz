---
layout: default
title: Blog
use:
    - posts
id: blog
---

<div class="page">
    <div class="container">
        <header class="page-header text-center">
            <h1>{{ page.title }}</h1>
        </header>

        <div class="main">
            <p class="rss-btn">
                <a href="/atom.xml" class="btn btn-primary">
                    <em class="fa fa-rss fa-fw"></em>
                    RSS&nbsp;
                </a>
            </p>

            {% for post in data.posts %}
                {{ include('partials/postPreview.twig', {'post': post}) }}
            {% endfor %}
        </div>
    </div>
</div>
