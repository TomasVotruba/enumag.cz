<article class="blog-post">
    <header>
        {if $post->thumbnail}
            <img src="/images/posts/thumbnail/{$post->thumbnail}" class="pull-left post-thumbnail hidden-xs">
            <meta property="og:image" content="/images/posts/thumbnail/{$post->thumbnail}" />
        {/if}

        <a href="{$post->url}">
            <h2>{$post->title}</h2>
        </a>

        {include 'postMetadataLine'}
    </header>

    <p>{$post->meta->perex|raw}</p>
    <div class="clearfix"></div>
</article>
